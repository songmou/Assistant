@page
@model IndexModel
@{
    ViewData["Title"] = "OA/EHR Assistant";
}

<div class="assistant-shell">
    <h2>OA/EHR 智能办公助手</h2>
    <p class="text-muted">仅处理 OA 与 EHR 事项，支持多用户会话隔离。</p>

    <div class="row g-3 mb-3">
        <div class="col-md-8">
            <input id="userIdInput" class="form-control" placeholder="输入用户标识（如邮箱/工号）" />
        </div>
        <div class="col-md-4 d-grid">
            <button id="createSessionBtn" class="btn btn-primary">创建会话并加载登录页</button>
        </div>
    </div>

    <div class="alert alert-light border" id="sessionInfo">尚未创建会话</div>

    <div class="row g-3">
        <div class="col-lg-5">
            <div class="card">
                <div class="card-header">扫码登录</div>
                <div class="card-body text-center">
                    <img id="qrImage" class="img-fluid border rounded" alt="登录二维码" />
                    <div id="loginStatus" class="small text-muted mt-2">等待会话创建</div>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="card">
                <div class="card-header">对话</div>
                <div class="card-body">
                    <div id="messages" class="assistant-messages"></div>
                    <div class="input-group mt-3">
                        <input id="messageInput" class="form-control" placeholder="例如：帮我进入OA并查看待审批事项" />
                        <button id="sendBtn" class="btn btn-success">发送</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/assistant.js" asp-append-version="true"></script>
}
